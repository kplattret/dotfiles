export ZSH="$HOME/.oh-my-zsh"
export DOTFILES="$HOME/.dotfiles"

ZSH_THEME="robbyrussell"
HIST_STAMPS="dd/mm/yyyy"
COMPLETION_WAITING_DOTS=true
ZSH_DISABLE_COMPFIX=true

fpath=(/usr/local/share/zsh-completions $fpath)
plugins=(git z)

source $ZSH/oh-my-zsh.sh

export LANG=en_US.UTF-8
export EDITOR="vim"
export PATH="$HOME/bin:/usr/local/bin:/usr/local/sbin:$PATH"
export SSH_KEY_PATH="$HOME/.ssh/id_ed25519.pub"

# Load asdf
. /usr/local/opt/asdf/asdf.sh
. /usr/local/opt/asdf/etc/bash_completion.d/asdf.bash

# Export local env vars if they exist
if [ -e ~/.local-env-vars ]; then
  source $HOME/.local-env-vars
fi

# Add SSH key to keychain if on Linux
if [[ $OS == "linux" ]]; then
  keychain id_ed25519
  . ~/.keychain/`uname -n`-sh
fi

source $DOTFILES/zsh/zsh-aliases.sh
source $DOTFILES/zsh/zsh-functions.sh
